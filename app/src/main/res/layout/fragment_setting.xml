<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        >

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:text="@string/setting_nickname_title"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:id="@+id/tvNicknameTitle"
            android:textColor="#3d3d3d"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNicknameTitle"
            app:layout_constraintEnd_toEndOf="parent"

            android:textColor="#3d3d3d"
            android:id="@+id/tvNickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/tvNicknameTitle"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginTop="20dp"
            android:text="@string/setting_email_title"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:id="@+id/tvEmailTitle"
            android:textColor="#3d3d3d"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/tvNickname"
            app:layout_constraintStart_toEndOf="@id/tvEmailTitle"
            app:layout_constraintEnd_toEndOf="parent"

            android:textColor="#3d3d3d"
            android:layout_marginTop="20dp"
            android:id="@+id/tvEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>